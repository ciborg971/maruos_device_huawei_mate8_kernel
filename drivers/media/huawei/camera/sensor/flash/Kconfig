if HISI_CAMERA_FLASH

menu "Hisilicon camera flash driver support"

config HISI_CAMERA_TPS61310
    tristate "TPS61310 camera flash driver"
    depends on HISI_CAMERA_FLASH
    default n
    ---help---
        TPS61310 camera flash driver

config HISI_CAMERA_LM3642
    tristate "LM3642 camera flash driver"
    depends on HISI_CAMERA_FLASH
    default y
    ---help---
        LM3642 camera flash driver

config HISI_CAMERA_LM3646_FRONT
    tristate "LM3646 FRONT control camera flash driver"
    depends on HISI_CAMERA_FLASH
    default y
    ---help---
        LM3646 front camera flash driver

config HISI_CAMERA_LM3646
    bool "LM3642 camera flash driver"    
    default y
    depends on HISI_CAMERA_FLASH    

config HISI_CAMERA_PMU_LED
    tristate "PMU LED camera flash driver"
    depends on HISI_CAMERA_FLASH
    default y
    ---help---
        PMU LED camera flash driver

endmenu

endif
